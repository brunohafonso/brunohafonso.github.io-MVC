<!-- pegando estrutura criado no model -->
@model Proj.Models.Cidade
<!-- alterando titulo -->
@{
    ViewData["title"] = "Cadastrar";
} 

<!-- criando formulario para cadastrar dados no banco -->
<div class="row">
    <form asp-action="Cadastrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome da Cidade</label>
                <input type="Text" asp-for="Nome" class="form-control" placeholder="Ex: SÃ£o Paulo" required="required"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input  type="Text" asp-for="Estado" class="form-control" placeholder="Ex: SP" maxlength="2" required="required"/>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habitantes" class="control-label">Habitantes</label>
                <input  type="number" asp-for="Habitantes" class="form-control" placeholder="Ex: 10.000" required="required"/>
                <span asp-validation-for="Habitantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-dafault"/>
            </div>
    </form>
</div>
